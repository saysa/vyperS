{% extends "VyperSiteBundle:layouts:admin.html.twig" %}

{% block title "ADMIN" %}

    {% block content %}
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h2><i class="icon-edit"></i>Update Program : {{ program.title }}</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <form class="form-horizontal" method="post" {{ form_enctype(form) }}>

                            {{ form_widget(form._token) }}

                            <fieldset class="col-sm-12">

                                <div class="row">
                                    <div class="col-lg-4">

                                        <!-- Title -->
                                        <div class="row">
                                            <div class="form-group col-lg-7{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.title, "Title *") }}
                                                <div class="controls">
                                                    {{ form_widget(form.title, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.title) }}
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-lg-4">

                                        <!-- Date -->
                                        <div class="row">
                                            <div class="form-group col-lg-5{%if error_rel_date is defined %} has-error{% endif %}">
                                                {{ form_label(form.date, "Date *") }}
                                                <div class="controls">
                                                    {{ form_widget(form.date, { 'attr': {'class': 'form-control datepicker'} }) }}
                                                    {{ form_errors(form.date) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-lg-4">
                                        <!-- Description -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.description, "Description") }}
                                                <div class="controls">
                                                    {{ form_widget(form.description, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.description) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">

                                    </div>
                                </div>



                                <div class="row">
                                    <!-- Start Time -->
                                    <div class="form-group col-lg-2{%if error_rel_date is defined %} has-error{% endif %}">
                                        {{ form_label(form.startTime, "Start *") }}
                                        <div class="controls">
                                            {{ form_widget(form.startTime, { 'attr': {'class': 'form-control timepicker'} }) }}
                                            {{ form_errors(form.startTime) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-2">
                                    </div>
                                    <!-- End Time -->
                                    <div class="form-group col-lg-2{%if error_rel_date is defined %} has-error{% endif %}">
                                        {{ form_label(form.endTime, "End *") }}
                                        <div class="controls">
                                            {{ form_widget(form.endTime, { 'attr': {'class': 'form-control timepicker'} }) }}
                                            {{ form_errors(form.endTime) }}
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-lg-4">
                                        <!-- Type -->
                                        <div class="row">
                                            <div class="form-group col-lg-9">
                                                {{ form_label(form.type, "Type") }}
                                                <div class="controls">
                                                    {{ form_widget(form.type, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4">

                                        <!-- Lang -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.lang, "Lang") }}
                                                <div class="controls">
                                                    {{ form_widget(form.lang, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.lang) }}
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                    <div class="col-lg-4">

                                        <!-- Present -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.present, "Present") }}
                                                <div class="controls">
                                                    {{ form_widget(form.present, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.present) }}
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>



                                <div class="form-actions">
                                    <input type="hidden" name="add" value="add">
                                    <button type="submit" class="btn btn-primary">Save Program</button>
                                    <button type="reset" class="btn">Cancel</button>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}