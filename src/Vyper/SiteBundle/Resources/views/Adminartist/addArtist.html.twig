{% extends "VyperSiteBundle:layouts:admin.html.twig" %}

{% block title "ADMIN" %}

    {% block content %}
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h2><i class="icon-edit"></i>Add Artist</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <form class="form-horizontal" method="post" {{ form_enctype(form) }}>

                            {{ form_widget(form._token) }}

                            <fieldset class="col-sm-12">

                                <div class="row">
                                    <div class="col-lg-4">
                                        <!-- Name -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.name, "Name *") }}
                                                <div class="controls">
                                                    {{ form_widget(form.name, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.name) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <!-- Real Name -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_real_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.realName, "Real Name") }}
                                                <div class="controls">
                                                    {{ form_widget(form.realName, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.realName) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <!-- Type -->
                                <div class="row">
                                    <div class="form-group col-lg-9{%if error_profile is defined %} has-error{% endif %}">
                                        {{ form_label(form.type, "Type *") }}
                                        <div class="controls">
                                            {{ form_widget(form.type, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                        </div>
                                    </div>
                                </div>

                                <!-- Profile -->
                                <div class="row">
                                    <div class="form-group col-lg-9{%if error_profile is defined %} has-error{% endif %}">
                                        {{ form_label(form.profile, "Profile *") }}
                                        <div class="controls">
                                            {{ form_widget(form.profile, {  'attr': {'class': 'form-control'} }) }}
                                            {{ form_errors(form.profile) }}
                                        </div>
                                    </div>
                                </div>

                                <!-- Biography -->
                                <div class="form-group hidden-phone{%if error_biography is defined %} has-error{% endif %}">
                                    {{ form_label(form.biography, "Biography") }}
                                    <div class="controls">
                                        {{ form_widget(form.biography, {  'attr': {'class': 'cleditor'} }) }}
                                        {{ form_errors(form.biography) }}
                                    </div>
                                </div>

                                <div class="row">

                                    <!-- Author -->
                                        <div class="form-group col-lg-3{%if error_author is defined %} has-error{% endif %}">
                                            {{ form_label(form.author, "Author") }}
                                            <div class="controls">
                                                {{ form_widget(form.author, {  'attr': {'class': 'form-control'} }) }}
                                                {{ form_errors(form.author) }}
                                            </div>
                                        </div>


                                    <div class="form-group col-lg-1">
                                    </div>
                                    <!-- Translator -->
                                    <div class="form-group col-lg-4">
                                        {{ form_label(form.translator, "Translator") }}
                                        <div class="controls">
                                            {{ form_widget(form.translator, {  'attr': {'class': 'form-control'} }) }}
                                            {{ form_errors(form.translator) }}
                                        </div>
                                    </div>
                                </div>

                                <!-- Keywords -->
                                <div class="row">
                                    <div class="form-group col-lg-9{%if error_keywords is defined %} has-error{% endif %}">
                                        {{ form_label(form.keywords, "Keywords *") }}
                                        <div class="controls">
                                            {{ form_widget(form.keywords, {  'attr': {'class': 'form-control'} }) }}
                                            {{ form_errors(form.keywords) }}
                                        </div>
                                    </div>
                                </div>



                                <div class="row">
                                    <!-- Related Picture -->
                                    <div class="form-group col-lg-3">
                                        {{ form_label(form.pictureID, "Picture ID") }}
                                        <div class="controls">
                                            {{ form_widget(form.pictureID, { 'attr': {'class': 'form-control'} }) }}
                                            <a href="{{ path('admin_show_pictures') }}" target="_blank">View Pictures</a>
                                            {{ form_errors(form.pictureID) }}
                                        </div>
                                    </div>
                                </div>


                                <div class="form-actions">
                                    <input type="hidden" name="add" value="add">
                                    <button type="submit" class="btn btn-primary">Save artist</button>
                                    <button type="reset" class="btn">Cancel</button>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}