{% extends "VyperSiteBundle:layouts:layout.html.twig" %}

{% block title %}Podcasts Audios | {{ parent() }}{% endblock %}

    {% block content %}


        <header class="archive-header">
            <h2 class="archive-title">Podcasts Audios</h2>
        </header><!-- /archive-header -->

        <div class="row">
            <div class="col-xs-6">
                <a href="{{ path('showAllPodcasts') }}" class="btn-link">VIDEO</a>
            </div>
            <div class="col-xs-6">
                <a href="{{ path('showAllPodcastsAudio') }}" class="btn-link">Audio</a>
            </div>
        </div>

        <script type="text/javascript" src="{{ asset('assets/js/jwplayer/jwplayer.js') }}"></script>
        <script type="text/javascript">jwplayer.key="FPLzeEch5TNW11Hy0dnMrNEWuq1YZvVZBB485w==";</script>


        {% for audio in podcast_audios %}

            <div class="row">
                <div class="col-lg-12">
                    <h3>{{ audio.title }}</h3>

                    <p>
                        {{ audio.description }}
                    </p>

                    <object type="application/x-shockwave-flash" data="{{ asset('assets/js/jwplayer/jwplayer.flash.swf') }}"
                            width="100%" height="100%" bgcolor="#000000"
                            id="audioplayer-{{ loop.index }}" name="audioplayer" tabindex="0">
                        <param name="allowfullscreen" value="true">
                        <param name="allowscriptaccess" value="always">
                        <param name="seamlesstabbing" value="true">
                        <param name="wmode" value="opaque">

                    </object>
                    <script type="text/javascript">
                        jwplayer("audioplayer-{{ loop.index }}").setup({
                            flashplayer: "{{ asset('assets/js/jwplayer/jwplayer.flash.swf') }}",
                            file: "{{ asset('podcasts/audio/' ~ audio.filename ~ '') }}",
                            height:30,
                            width: "100%"
                        });
                    </script>

                </div>
            </div>



        {%  endfor %}




        <div class="add_468">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- un_artist -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:468px;height:60px"
                 data-ad-client="ca-pub-3070362287154347"
                 data-ad-slot="6183315514"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>


    {% endblock %}