{% extends "VyperSiteBundle:layouts:admin.html.twig" %}

{% block title "ADMIN" %}

    {% block content %}
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h2><i class="icon-edit"></i>Add Event</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <form class="form-horizontal" method="post" {{ form_enctype(form) }}>

                            {{ form_widget(form._token) }}

                            <fieldset class="col-sm-12">

                                <div class="row">
                                    <div class="col-lg-4">

                                        <!-- Title -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.title, "Title *") }}
                                                <div class="controls">
                                                    {{ form_widget(form.title, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.title) }}
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-lg-4">

                                        <!-- Real Title -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.realTitle, "Real Title") }}
                                                <div class="controls">
                                                    {{ form_widget(form.realTitle, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.realTitle) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-lg-4">
                                        <!-- Description -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.description, "Description *") }}
                                                <div class="controls">
                                                    {{ form_widget(form.description, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.description) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <!-- Description Real -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.descriptionReal, "Description Real") }}
                                                <div class="controls">
                                                    {{ form_widget(form.descriptionReal, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.descriptionReal) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-lg-4">
                                        <!-- Location -->
                                        <div class="row">
                                            <div class="form-group col-lg-9">
                                                {{ form_label(form.location, "Location") }}
                                                <div class="controls">
                                                    {{ form_widget(form.location, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">

                                    </div>
                                </div>






                                <div class="row">
                                    <!-- Date -->
                                    <div class="form-group col-lg-3{%if error_rel_date is defined %} has-error{% endif %}">
                                        {{ form_label(form.date, "Date *") }}
                                        <div class="controls">
                                            {{ form_widget(form.date, { 'attr': {'class': 'form-control datepicker'} }) }}
                                            {{ form_errors(form.date) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-1">
                                    </div>
                                    <!-- Time -->
                                    <div class="form-group col-lg-2{%if error_rel_date is defined %} has-error{% endif %}">
                                        {{ form_label(form.time, "Time *") }}
                                        <div class="controls">
                                            {{ form_widget(form.time, { 'attr': {'class': 'form-control timepicker'} }) }}
                                            {{ form_errors(form.time) }}
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-lg-4">
                                        <!-- Type -->
                                        <div class="row">
                                            <div class="form-group col-lg-9">
                                                {{ form_label(form.type, "Type") }}
                                                <div class="controls">
                                                    {{ form_widget(form.type, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <!-- Tour -->
                                        <div class="row">
                                            <div class="form-group col-lg-9">
                                                {{ form_label(form.tour, "Tour") }}
                                                <div class="controls">
                                                    {{ form_widget(form.tour, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4">

                                        <!-- Price -->
                                        <div class="row">
                                            <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                                {{ form_label(form.price, "Price") }}
                                                <div class="controls">
                                                    {{ form_widget(form.price, {  'attr': {'class': 'form-control'} }) }}
                                                    {{ form_errors(form.price) }}
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                    <div class="col-lg-4">
                                    </div>
                                </div>

                                <div class="row">
                                    <!-- Related Picture -->
                                    <div class="form-group col-lg-3">
                                        {{ form_label(form.pictureID, "Picture ID") }}
                                        <div class="controls">
                                            {{ form_widget(form.pictureID, { 'attr': {'class': 'form-control'} }) }}
                                            <a href="{{ path('admin_show_pictures') }}" target="_blank">View Pictures</a>
                                            {{ form_errors(form.pictureID) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions">
                                    <input type="hidden" name="add" value="add">
                                    <button type="submit" class="btn btn-primary">Save event</button>
                                    <button type="reset" class="btn">Cancel</button>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}