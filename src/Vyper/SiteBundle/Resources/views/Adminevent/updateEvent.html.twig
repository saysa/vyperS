{% extends "VyperSiteBundle:layouts:admin.html.twig" %}

{% block title "ADMIN" %}

    {% block content %}
        <div class="row">
        <div class="col-lg-12">
        <div class="box">
        <div class="box-header">
            <h2><i class="icon-edit"></i>Update Event : {{ event.getTitle }}</h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <form class="form-horizontal" method="post" {{ form_enctype(form) }}>

                {{ form_widget(form._token) }}

                <fieldset class="col-sm-12">

                    <div class="row">
                        <div class="col-lg-4">

                            <!-- Title -->
                            <div class="row">
                                <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                    {{ form_label(form.title, "Title *") }}
                                    <div class="controls">
                                        {{ form_widget(form.title, {  'attr': {'class': 'form-control'} }) }}
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-4">

                            <!-- Real Title -->
                            <div class="row">
                                <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                    {{ form_label(form.realTitle, "Real Title") }}
                                    <div class="controls">
                                        {{ form_widget(form.realTitle, {  'attr': {'class': 'form-control'} }) }}
                                        {{ form_errors(form.realTitle) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">

                            <!-- Description -->
                            <div class="row">
                                <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                    {{ form_label(form.description, "Description *") }}
                                    <div class="controls">
                                        {{ form_widget(form.description, {  'attr': {'class': 'form-control'} }) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-4">

                            <!-- Description Real -->
                            <div class="row">
                                <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                    {{ form_label(form.descriptionReal, "Description Real") }}
                                    <div class="controls">
                                        {{ form_widget(form.descriptionReal, {  'attr': {'class': 'form-control'} }) }}
                                        {{ form_errors(form.descriptionReal) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">

                            <!-- Location -->
                            <div class="row">
                                <div class="form-group col-lg-9">
                                    {{ form_label(form.location, "Location") }}
                                    <div class="controls">
                                        {{ form_widget(form.location, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-4">



                        </div>
                    </div>


                    <div class="row">
                        <!-- Date -->
                        <div class="form-group col-lg-3{%if error_rel_date is defined %} has-error{% endif %}">
                            {{ form_label(form.date, "Date *") }}
                            <div class="controls">
                                {{ form_widget(form.date, { 'attr': {'class': 'form-control datepicker'} }) }}
                                {{ form_errors(form.date) }}
                            </div>
                        </div>
                        <div class="form-group col-lg-1">
                        </div>
                        <!-- Time -->
                        <div class="form-group col-lg-2{%if error_rel_date is defined %} has-error{% endif %}">
                            {{ form_label(form.time, "Time *") }}
                            <div class="controls">
                                {{ form_widget(form.time, { 'attr': {'class': 'form-control timepicker'} }) }}
                                {{ form_errors(form.time) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">

                            <!-- Type -->
                            <div class="row">
                                <div class="form-group col-lg-9">
                                    {{ form_label(form.type, "Type") }}
                                    <div class="controls">
                                        {{ form_widget(form.type, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-4">

                            <!-- Tour -->
                            <div class="row">
                                <div class="form-group col-lg-9">
                                    {{ form_label(form.tour, "Tour") }}
                                    <div class="controls">
                                        {{ form_widget(form.tour, {  'attr': {'class': 'form-control', 'data-rel': 'chosen'} }) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-4">

                            <!-- Price -->
                            <div class="row">
                                <div class="form-group col-lg-9{%if error_name is defined %} has-error{% endif %}">
                                    {{ form_label(form.price, "Price") }}
                                    <div class="controls">
                                        {{ form_widget(form.price, {  'attr': {'class': 'form-control'} }) }}
                                        {{ form_errors(form.price) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-4">
                        </div>
                    </div>

                    <div class="row">
                        <!-- Related Picture -->
                        <div class="form-group col-lg-3">
                            {{ form_label(form.pictureID, "Picture ID") }}
                            <div class="controls">
                                {{ form_widget(form.pictureID, { 'attr': {'class': 'form-control'} }) }}
                                <a href="{{ path('admin_show_pictures') }}" target="_blank">View Pictures</a>
                                {{ form_errors(form.pictureID) }}
                            </div>
                        </div>
                    </div>

                    {%  if event.picture is not null %}
                        <div class="row">
                            <img src="{{ asset(event.picture.getPath()) }}" alt="Current picture" height="150" />
                        </div>
                    {%  endif %}


                    <div class="form-actions">
                        <input type="hidden" name="update" value="update">
                        <button type="submit" class="btn btn-primary">Save</button>

                    </div>

                </fieldset>
            </form>
        </div>
        </div>
        </div>
        </div>








































        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h2><i class="icon-edit"></i>Artists linked</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <form class="form-horizontal" method="post">
                            <fieldset class="col-sm-12">


                                <div class="row">
                                    <!-- Gauche -->
                                    <div class="form-group col-lg-5">
                                        <label class="control-label" for="theme">Artists </label>
                                        <div class="controls">
                                            <select id="artists_to_link" name="artists_to_link" class="form-control" data-rel="chosen">
                                                <option value="-1">-- none --</option>
                                                {% for artist in artists %}
                                                    {% if artist in event.artists %}

                                                    {% else %}
                                                        <option value="{{ artist.getId }}">{{ artist.getName }}</option>
                                                    {% endif %}
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="row">
                                            <button type="button" class="btn btn-primary" id="link_button">Link the artist</button>
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-1">
                                    </div>
                                    <!-- Droite -->
                                    <div class="form-group col-lg-6">
                                        <table class="table table-striped table-bordered bootstrap-datatable" id="relArtistLinkTable">
                                            <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Artist</th>
                                                <th>Unlink</th>
                                            </tr>
                                            </thead>

                                            <tbody>
                                            {% for artist in event.artists %}
                                                <tr id="{{ artist.getId }}">
                                                    <td>{{ artist.getId }}</td>
                                                    <td>{{ artist.getName }}</td>
                                                    <td><a class="btn btn-danger deleteLink" href="#"><i class="icon-trash "></i> </a></td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>






                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>

            $(document).ready(function() {

                $("#relArtistLinkTable").on("click", ".deleteLink", function() {
                    var tr = $(this).closest('tr');
                    var artistID = tr.attr('id');

                    $.ajax({
                        type: "POST",
                        url: "{{ path('ajax_eventArtistLinkDelete') }}",

                        data:{
                            artist_id : artistID,
                            item_id : '{{ event.getId }}'
                        },
                        success: function(data){
                        }
                    });

                    tr.css("background-color","#FF3700");

                    tr.fadeOut(400, function(){
                        tr.remove();
                    });
                    return false;
                });

                $( "#link_button" ).on("click", function() {

                    $.ajax({
                        type: "POST",
                        url: "{{ path('ajax_eventArtistLink') }}",
                        dataType: "json",
                        data:{
                            artist_id : $('#artists_to_link').val(),
                            item_id : '{{ event.getId }}'
                        },
                        success: function(data){
                            $('#relArtistLinkTable tr:last').after('<tr id="'+ data.artist.id +'"><td>' + data.artist.id + '</td><td>' + data.artist.name + '</td><td><a class="btn btn-danger deleteLink" href="#"><i class="icon-trash "></i> </a></td></tr>');
                        }
                    });

                });

            });


        </script>
    {% endblock %}
