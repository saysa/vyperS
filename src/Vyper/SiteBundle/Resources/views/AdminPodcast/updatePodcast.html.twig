{% extends 'VyperSiteBundle:layouts:admin.html.twig' %}

{% block title %}
    {% block content %}
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h2><i class="icon-edit"></i>Update {{ podcast.getTitle }}</h2>

                        <div class="box-icon">
                            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <form class="form-horizontal" method="post" {{ form_enctype(form) }}>

                        {{ form_widget(form._token) }}

                        <fieldset class="col-sm-12">

                            <div class="row">
                                <div class="form-group col-lg-5{% if error_name is defined %} has-error{% endif %}">
                                    <label>Type</label>
                                    <div class="controls">
                                        <select name="type" class="form-control">
                                            <option value="video">video</option>
                                            <option value="audio"{% if podcast.type == 'audio' %} selected="selected"{% endif %}>audio</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4">
                                    <!-- Title -->
                                    <div class="row">
                                        <div class="form-group col-lg-9{% if error_name is defined %} has-error{% endif %}">
                                            {{ form_label(form.title, "Title *") }}
                                            <div class="controls">
                                                {{ form_widget(form.title, {  'attr': {'class': 'form-control'} }) }}
                                                {{ form_errors(form.title) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <!-- Description -->
                                    <div class="row">
                                        <div class="form-group col-lg-9{% if error_name is defined %} has-error{% endif %}">
                                            {{ form_label(form.description, "Description") }}
                                            <div class="controls">
                                                {{ form_widget(form.description, {  'attr': {'class': 'form-control'} }) }}
                                                {{ form_errors(form.description) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <!-- Filename -->
                                <div class="form-group col-lg-5{% if error_name is defined %} has-error{% endif %}">
                                    {{ form_label(form.filename, "Filename *") }}
                                    <div class="controls">
                                        {{ form_widget(form.filename, {  'attr': {'class': 'form-control'} }) }}
                                        {{ form_errors(form.filename) }}
                                    </div>
                                </div>

                            </div>


                            <div class="row">
                                <!-- Related Picture -->
                                <div class="form-group col-lg-3">
                                    {{ form_label(form.pictureID, "Picture ID") }}
                                    <div class="controls">
                                        {{ form_widget(form.pictureID, { 'attr': {'class': 'form-control'} }) }}
                                        <a href="{{ path('admin_show_pictures') }}" target="_blank">View Pictures</a>
                                        {{ form_errors(form.pictureID) }}
                                    </div>
                                </div>
                            </div>

                            {%  if podcast.picture is not null %}
                                <div class="row">
                                    <img src="{{ asset(podcast.picture.getPath()) }}" alt="Current picture" height="150" />
                                </div>
                            {%  endif %}

                            <div class="form-actions">
                                <input type="hidden" name="add" value="add">
                                <button type="submit" class="btn btn-primary">Save</button>

                            </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}

