{% extends "VyperSiteBundle:layouts:admin.html.twig" %}

{% block title "ADMIN" %}

    {% block content %}

        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header" data-original-title>
                        <h2><i class="icon-book"></i><span class="break"></span>Magazines</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">

                        <div class="pull-right">
                            <a href="{{ path('admin_add_magazine') }}">
                                <button class="btn btn-small btn-primary"><i class="icon-plus"></i> add</button>
                            </a>
                        </div>


                        <hr>

                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Cover</th>
                                <th>Release Date</th>

                                <th>Modify</th>
                                <th>Delete</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for mag in magazines %}
                                <tr>
                                    <td>{{ mag.getId }}</td>
                                    <td>{{ mag.getTitle }}</td>
                                    <td><img src="{{ asset(mag.picture.getPath('admin-mag')) }}" alt="cover" /></td>
                                    <td>{{ mag.getCreated|date('Y-m-d') }}</td>


                                    <td><a class="btn btn-info" href="{{ path('admin_update_magazine', {'id': mag.getId}) }}"><i class="icon-edit "></i></a></td>
                                    <td><a class="btn btn-danger" href="#"><i class="icon-trash "></i> </a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <hr>

                        <div class="pull-right">
                            <a href="{{ path('admin_add_magazine') }}">
                                <button class="btn btn-small btn-primary"><i class="icon-plus"></i> add</button>
                            </a>
                        </div>

                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </div>
    {% endblock %}